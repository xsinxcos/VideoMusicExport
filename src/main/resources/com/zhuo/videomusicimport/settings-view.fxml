<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.zhuo.videomusicimport.SettingsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="下载目录：" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="downloadPathField" prefWidth="300" editable="false"/>
            <Button text="选择目录" onAction="#onChooseDirectory"/>
        </HBox>

        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Button text="保存" onAction="#onSave"/>
            <Button text="取消" onAction="#onCancel"/>
        </HBox>
    </GridPane>
</VBox>
